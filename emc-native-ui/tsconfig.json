{
  "compilerOptions": {
    "target": "ESNext",                                  
    "lib": ["DOM", "ESNext"],                            
    "jsx": "react-native",
    "module": "commonjs",                                
    "moduleResolution": "node",                     
    "resolveJsonModule": true,                      
    "allowJs": true,                                
    "declaration": true,                            
    "declarationMap": true,                         
    "sourceMap": true,                              
    "outDir": "lib",                                
    "noEmit": true,                                 
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,
    "strict": true,           
    "skipLibCheck": true      
  },
  "include": ["src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}

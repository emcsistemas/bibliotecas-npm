{
  "name": "@emcsistemas/native-ui",
  "version": "0.0.5",
  "description": "Biblioteca para estilização de apps",
  "author": "Leandro Fernandes <leo.desenvolvimento@emcsistemas.com.br>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emcsistemas/bibliotecas-npm/tree/main/native-ui"
  },
  "keywords": [
    "emc",
    "sistemas",
    "emc-sistemas",
    "ui",
    "react",
    "native",
    "react-native",
    "react-component"
  ],
  "scripts": {
    "commit:main": "cd .. && git add . && git commit -m 'biblioteca atualizada' && git push origin main",
    "prebuild": "sudo rm -rf lib",
    "build": "tsc -p .",
    "pub": "npm run build && npm version patch --force && npm publish --access public",
    "postpub": "echo 'package has been published'"
  },
  "devDependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@types/react": "^18.2.22",
    "react": "^18.2.0",
    "react-native": "^0.72.4",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@expo/vector-icons": "*",
    "@types/react": "*",
    "react": "*",
    "react-native": "*"
  }
}
